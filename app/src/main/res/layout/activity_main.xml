<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/home"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="25sp"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="5dp"
                android:text="@string/club_membership_registration" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:textSize="15sp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:text="@string/sub_title" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#D2D2D2"
                />

            <LinearLayout
                android:id="@+id/input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">



                <!-- student name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/s_name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColorHint="@color/black"
                    app:boxBackgroundColor="@color/white"
                    app:boxStrokeColor="@color/your_hint_color"
                    app:hintTextColor="#4540F4"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/s_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:hint="@string/student_name"
                        android:drawableStart="@drawable/name"
                        android:drawablePadding="8dp"
                        android:textColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>


                <!-- student email -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/s_email_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    app:boxStrokeColor="@color/your_hint_color"
                    android:textColorHint="@color/black"
                    app:boxBackgroundColor="@color/white"
                    app:hintTextColor="#4540F4"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/s_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:hint="@string/student_email"
                        android:drawableStart="@drawable/email_icon"
                        android:drawablePadding="8dp"
                        android:textColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- student mobile -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/s_mobile_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    app:boxStrokeColor="@color/your_hint_color"
                    app:boxStrokeWidth="2dp"
                    android:textColorHint="@color/black"
                    app:boxBackgroundColor="@color/white"
                    app:hintTextColor="#4540F4"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/s_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:hint="@string/mobile_number"
                        android:drawableStart="@drawable/mobile"
                        android:drawablePadding="8dp"
                        android:textColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/birth_date"
                    android:layout_marginTop="20dp"
                    android:paddingStart="15dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingEnd="15dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:gravity="center"
                    tools:ignore="DisableBaselineAlignment">

                    <!-- Day Field -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/day"
                        android:layout_marginEnd="10dp"
                        app:boxStrokeColor="@color/your_hint_color"
                        app:boxStrokeWidth="2dp"
                        android:textColorHint="@color/black"
                        app:boxBackgroundColor="@color/white"
                        app:endIconTint="@color/black"
                        app:hintTextColor="#4540F4"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">

                        <AutoCompleteTextView
                            android:id="@+id/day"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:inputType="none"
                            tools:ignore="LabelFor" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <!-- Month Field -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/month"
                        android:layout_marginEnd="10dp"
                        app:boxStrokeWidth="2dp"
                        app:boxStrokeColor="@color/your_hint_color"
                        android:textColorHint="@color/black"
                        app:boxBackgroundColor="@color/white"
                        app:hintTextColor="#4540F4"
                        app:endIconTint="@color/black"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">

                        <AutoCompleteTextView
                            android:id="@+id/month"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:textColor="@color/black"
                            tools:ignore="LabelFor" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Year Field -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:boxStrokeColor="@color/your_hint_color"
                        android:hint="@string/year"
                        android:textColorHint="@color/black"
                        app:boxStrokeWidth="2dp"
                        app:boxBackgroundColor="@color/white"
                        app:hintTextColor="#4540F4"
                        app:endIconTint="@color/black"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">

                        <AutoCompleteTextView
                            android:id="@+id/year"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:inputType="none"
                            tools:ignore="LabelFor" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/address"
                    android:layout_marginTop="20dp"
                    android:paddingStart="18dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingEnd="15dp"/>

                <!-- student Address -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/s_address_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    app:boxStrokeColor="@color/your_hint_color"
                    app:boxStrokeWidth="2dp"
                    android:textColorHint="@color/black"
                    app:boxBackgroundColor="@color/white"
                    app:hintTextColor="#4540F4"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/s_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:hint="@string/street_address"
                        android:drawableStart="@drawable/address"
                        android:drawablePadding="8dp"
                        android:textColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Horizontal Layout for City and State/Province -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:gravity="center"
                    tools:ignore="DisableBaselineAlignment">

                    <!-- City Field -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/s_address_city_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:boxStrokeColor="@color/your_hint_color"
                        app:boxStrokeWidth="2dp"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:textColorHint="@color/black"
                        app:boxBackgroundColor="@color/white"
                        app:hintTextColor="#4540F4">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/s_address_city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:hint="@string/city"
                            android:drawableStart="@drawable/address"
                            android:drawablePadding="8dp"
                            android:textColor="@color/black" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- State/Province Field -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/s_address_State_Province_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:boxStrokeColor="@color/your_hint_color"
                        app:boxStrokeWidth="2dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:textColorHint="@color/black"
                        app:boxBackgroundColor="@color/white"
                        app:hintTextColor="#4540F4">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/s_address_State_Province"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:hint="@string/state_province"
                            android:drawableStart="@drawable/address"
                            android:drawablePadding="8dp"
                            android:textColor="@color/black" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>


                <!-- State/Province Field -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/zip_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/your_hint_color"
                    app:boxStrokeWidth="2dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColorHint="@color/black"
                    app:boxBackgroundColor="@color/white"
                    app:hintTextColor="#4540F4">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/s_zip_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="@string/postal_zip_code"
                        android:drawableStart="@drawable/address"
                        android:drawablePadding="8dp"
                        android:textColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/where_did_you_hear_about_us"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:textSize="18sp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/friend"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="@string/a_friend_or_colleauge"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        android:background="@color/white"
                        android:textColor="@color/black"
                        />
                    <CheckBox
                        android:id="@+id/google"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="@string/google"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        android:background="@color/white"
                        android:textColor="@color/black"
                        />
                    <CheckBox
                        android:id="@+id/blog_post"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="@string/blog_post"
                        android:textSize="12sp"
                        android:background="@color/white"
                        android:textStyle="italic"
                        android:textColor="@color/black"
                        />
                    <CheckBox
                        android:id="@+id/n_articles"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="@string/news_articles"
                        android:background="@color/white"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        android:textColor="@color/black"
                        />
                    <CheckBox
                        android:id="@+id/others"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="@string/others"
                        android:background="@color/white"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        android:textColor="@color/black"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/membership_type"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="20dp"
                        />

                    <RadioGroup
                        android:id="@+id/membership_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:background="@color/white"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="5dp">
                        <RadioButton
                            android:id="@+id/m_standard"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:textColor="@color/black"
                            android:text="@string/standard" />
                        <RadioButton
                            android:id="@+id/m_premium"
                            android:layout_width="wrap_content"
                            android:textColor="@color/black"
                            android:layout_height="48dp"
                            android:text="@string/premium" />
                        <RadioButton
                            android:id="@+id/m_ultimate"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:textColor="@color/black"
                            android:text="@string/ultimate" />
                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/preferred_way_to_contact"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="20dp"
                        />

                    <RadioGroup
                        android:id="@+id/preferred_way_contact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:background="@color/white"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="5dp">
                        <RadioButton
                            android:id="@+id/p_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"
                            android:textColor="@color/black"
                            android:text="@string/phone" />
                        <RadioButton
                            android:id="@+id/p_email"
                            android:layout_width="wrap_content"
                            android:textColor="@color/black"
                            android:layout_height="48dp"
                            android:text="@string/email" />
                        <RadioButton
                            android:id="@+id/p_any"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:textColor="@color/black"
                            android:text="@string/any" />
                    </RadioGroup>

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/membership_rules"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:layout_marginTop="40dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#D2D2D2"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_1_membership_is_available_to_anyone_18_years_of_age_or_older"
                    android:textColor="@color/black"
                    android:textStyle="italic"
                    android:textSize="14sp"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_2_you_promise_not_to_use_to_conduct_any_fraudulent_or_business_activity_or_have_more_than_one_member_account_at_any_time"
                    android:textColor="@color/black"
                    android:textStyle="italic"
                    android:textSize="14sp"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"/>


                <Button
                    android:id="@+id/submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/submit_application"
                    android:layout_marginEnd="65dp"
                    android:layout_marginStart="65dp"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="#3B53D1"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    tools:ignore="ButtonStyle" />

            </LinearLayout>


            <!-- output layout -->
            <LinearLayout
                android:id="@+id/output_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:layout_marginTop="10dp"
                android:paddingEnd="10dp"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/Name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:text="Student Name : "
                        />
                    <TextView
                        android:id="@+id/output_s_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="italic"
                        android:layout_weight="1"
                        android:text=" Not set "
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Email_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:text="Student Email : "
                        />
                    <TextView
                        android:id="@+id/output_s_email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="italic"
                        android:text=" Not set "
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Mobile_layout"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:text="Student Mobile : "
                        />
                    <TextView
                        android:id="@+id/output_s_mobile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="italic"
                        android:text=" Not set "
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/DOB_layout"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:text="Student Date of Birth : "
                        />
                    <TextView
                        android:id="@+id/output_s_dob"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="italic"
                        android:text=" Not set "
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/street_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:text="Street Address : "
                        />
                    <TextView
                        android:id="@+id/output_s_street_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="italic"
                        android:text=" Not set "
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/City_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:text="City : "
                        />
                    <TextView
                        android:id="@+id/output_s_city"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="italic"
                        android:text=" Not set "
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/State_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
